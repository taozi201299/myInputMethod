<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/base_key_width"
    android:layout_height="48dp">
    <TextView
        android:id="@+id/key_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        style="@style/TextThemeTop"
        android:textColor="@color/topTextColor"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/key_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        style="@style/TextThemeKey"/>
    <ImageView
        android:id="@+id/key_img"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/shift_xiaoxie1"
        />

</RelativeLayout>