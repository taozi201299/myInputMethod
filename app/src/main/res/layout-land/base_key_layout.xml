<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="57dp"
    android:layout_height="@dimen/base_key_height">
    <TextView
        android:id="@+id/key_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_1"
        style="@style/TextThemeTop"
        android:textColor="@color/topTextColor"
        android:textSize="@dimen/text_size_10"/>
    <TextView
        android:id="@+id/key_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_14"
        style="@style/TextThemeKey"/>
    <ImageView
        android:id="@+id/key_img"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/shift_xiaoxie1"
        />

</RelativeLayout>